{
    "name": "iosifch/messenger-mongo-transport",
    "description": "A Mongo transport for the Symfony Messenger component",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Iosif Chiriluta",
            "email": "iosifpub@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "doctrine/mongodb-odm-bundle": "3.*",
        "symfony/messenger": "4.*"
    },
    "require-dev": {
        "alcaeus/mongo-php-adapter": "^1.1",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "Iosifch\\MessengerMongoBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Iosifch\\MessengerMongoBundle\\Tests\\": "tests/"
        }
    }
}
